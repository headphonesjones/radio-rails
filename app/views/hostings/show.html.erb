<%- model_class = @hosting.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:show_id) %></strong></dt>
  <dd><%= link_to @hosting.show.title, @hosting.show %></dd>
  <dt><strong><%= model_class.human_attribute_name(:person_id) %></strong></dt>
  <dd><%= link_to @hosting.person.first_last_name, @hosting.person %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              hostings_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_hosting_path(@hosting), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              hosting_path(@hosting),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
