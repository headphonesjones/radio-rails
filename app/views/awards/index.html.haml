- model_class = Award
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
  = link_to 'Manage Organizations', award_organizations_path, :class => 'btn'
%table.table.table-striped.datatable
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:for)
      %th= model_class.human_attribute_name(:year)
      %th= model_class.human_attribute_name(:award_organization_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @awards.each do |award|
      %tr
        %td= link_to award.name, award_path(award)
        %td= award.for
        %td= award.year
        %td= award.award_organization.name
        %td=l award.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_award_path(award), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), award_path(award), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_award_path, :class => 'btn btn-primary'
