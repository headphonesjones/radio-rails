- model_class = Award
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @award.name
%p
  %strong= model_class.human_attribute_name(:for) + ':'
  %br
  = @award.for
%p
  %strong= model_class.human_attribute_name(:year) + ':'
  %br
  = @award.year
%p
  %strong= model_class.human_attribute_name(:award_organization_id) + ':'
  %br
  = @award.award_organization.try(:name)

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), awards_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_award_path(@award), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), award_path(@award), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
