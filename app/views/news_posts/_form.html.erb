<%= form_for @news_post, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :headline, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :headline, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :datetime_published, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :datetime_published, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :content, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :content, :class => 'text_area', :rows => 5, :style => "width:400px;" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :person_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:news_post, :person_id, Person.find(:all, :order => 'last_name'), :id, :last_first_name, :prompt => true) %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                news_posts_path, :class => 'btn' %>
  </div>
<% end %>
